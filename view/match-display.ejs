<%- include('header.ejs') %>

<body class="match">

<header class="container-fluid">
	<div class="row">
		<div class="col-xs-12">
			<h1><%= match.title %> <small<% if (match.status === 'pending') { %> class="waiting"<% } %>><%= subtitle %></small></h1>
		</div>
	</div>
</header>
<article class="container-fluid board">
	<div class="row">
		<div class="col-xs-4 player">
			<h2><%= match['player-a'] %></h2>
			<div class="score"><%- currentPointA %></div>
		</div>
		<div class="col-xs-4 game">
			<div>
				<span class="serve left<% if (match['current-serve'] === 'a' ) { %> visible<% } %>"></span>
				<span class="current-game"><%= match['current-game'] %></span>
				<span class="serve right<% if (match['current-serve'] === 'b' ) { %> visible<% } %>"></span>
			</div>
		</div>
		<div class="col-xs-4 player">
			<h2><%= match['player-b'] %></h2>
			<div class="score"><%- currentPointB %></div>
		</div>
	</div>
	<% for (var i=0; i<(match.game*2-1); i++) { %>
	<div class="row">
		<div class="col-xs-5 fixed-score left">
			<span class="dark">00</span>
		</div>
		<div class="col-xs-2 fixed-game-wrapper">
			<div>
				<span class="won"></span>
				<span class="fixed-game"><%= (i+1) %></span>
				<span class="won"></span>
			</div>
		</div>
		<div class="col-xs-5 fixed-score right">
			<span class="dark">00</span>
		</div>
	</div>
	<% } %>
</article>
<footer class="footer">
	<div class="container-fluid">
		<a href="/match/judge/<%= match.id %>/"<% if (match.status === 'pending') { %> class="waiting"<% } %>>I wanna be a judge of this match.</a>
	</div>
</footer>

<%- include('commonjs.ejs') %>
<script>
</script>

</body>
</html>
